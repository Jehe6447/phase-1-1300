#include <iostream>
using namespace std;
int main()
{
    //declare variables
    int bolt, gem=0, gold =0;
    //take input from user
    cout << "Enter the number of Bolts: " <<endl;
    cin >> bolt;
    //find number in gold 
    gold= bolt/23;
    //calculate rest bolts
    bolt=bolt%23;
    //convert gold to gem
    gem= gold/13;
    //calculate rest gold coins
    gold= gold%13;
    // print output
    cout << gem << " Gem(s) " << gold << " GoldCoin(s) " << bolt << " Bolt(s)";
    return 0;
    
}
